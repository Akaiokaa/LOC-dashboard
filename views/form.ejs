<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles/form.css" />
    <link rel="icon" href="/images/GRC_logo.svg" />
    <script src="/data/data.js" defer></script>
    <script src="/js/formValidation.js" defer></script>
    <script src="js/globals.js"></script>
    <script src="js/index.js" type="module"></script>
    <script src="/js/formData.js" defer></script>
    <script src="/data/divisionsData.js" type="module"></script> 
    <title>Divisions Management</title>
  </head>

  <body>
    <%- include('partials/header') %>
    <main>
      <div id="main-aside"><%- include('partials/aside') %></div>

      <div id="main-content">
        <form id="division-form" method="post" action="submit_edit"> 
          <span class="error" id="err-division"
            >Please input a Division Name!</span
          >
          <div id="selectDivision">
            <select name="division" id="division">
              <option value="art">Fine Arts</option>
              <option value="humanities">Humanities</option>
              <option value="social">Social Science</option>
              <option value="english">English</option>
              <option value="science">Science</option>
              <option value="technology">Technology</option>
              <option value="health">Health Science</option>
              <option value="trades">Trades</option>
            </select>
          </div>

          <div class="division-container">
            <div class="division-details">
              <div class="flex-item">
                <label for="chair">Division Chair</label>
                <span class="error" id="err-chair">Please input a Chair!</span>
                <input type="text" name="chair" id="chair" />
              </div>
              <div class="flex-item">
                <label for="dean">Dean</label>
                <span class="error" id="err-dean">Please input a Dean!</span>
                <input type="text" name="dean" id="dean" />
              </div>
              <div class="flex-item">
                <label for="locRep">LOC Rep</label>
                <span class="error" id="err-locRep"
                  >Please input a LOC Rep!</span
                >
                <input type="text" name="locRep" id="locRep" />
              </div>
              <div class="flex-item">
                <label for="pen">PEN Contact</label>
                <span class="error" id="err-pen"
                  >Please input a PEN Contact!</span
                >
                <input type="text" name="pen" id="pen" />
              </div>
            </div>
            <div class="main-buttons">
              <button type="button" id="edit-details" class="main-button">Edit Details</button>
              <button type="button" id="cancel-button">Cancel</button>
              <button type="submit" id="save-button">Save</button>
            </div>
          </div>
        </form>
        <h2>Programs</h2>
        <div id="programs"></div>
      </div>
    </main>
    <%- include('partials/footer') %>
  </body>
</html>
