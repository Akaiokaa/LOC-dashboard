<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles/styles.css" />
    <link rel="icon" href="/images/GRC_logo.svg" />
    <script src="/js/data.js" defer></script>
    <script src="/js/formValidation.js" defer></script>
    <script src="/js/formData.js" defer></script>
    <title>Divisions Management</title>
  </head>

  <body>
    <form id="department-form" action="submit_report" method="post">
      <fieldset>
        <legend>Division Management</legend>
        <div class="grid-container">
          <div class="grid-item1">
            <label for="division">Division Name:</label>
            <span class="error" id="err-division"
              >Please input a Division Name!</span
            >
            <br />
            <select name="division" id="division">
              <option value="art">Fine Arts</option>
              <option value="humanities">Humanities</option>
              <option value="social">Social Science</option>
              <option value="english">English</option>
              <option value="science">Science</option>
              <option value="technology">Technology</option>
              <option value="health">Health Science</option>
              <option value="trades">Trades</option>
            </select>
          </div>

          <div class="grid-item2">
            <label for="program">Academic Program:</label>
            <span class="error" id="err-program">Please select a program!</span>
            <select name="program" id="program">
              <option value="art">Fine Arts</option>
              <option value="humanities">Humanities</option>
              <option value="social">Social Science</option>
              <option value="english">English</option>
              <option value="science">Science</option>
              <option value="technology">Technology</option>
              <option value="health">Health Science</option>
              <option value="trades">Trades</option>
            </select>
            <br />
          </div>

          <div class="grid-item3">
            <label for="chair">Divison Chair:</label>
            <span class="error" id="err-chair">Please input a Chair!</span>
            <input type="text" name="chair" id="chair" />
          </div>

          <div class="grid-item4">
            <label for="dean">Dean:</label>
            <span class="error" id="err-dean">Please input a Dean!</span>
            <input type="text" name="dean" id="dean" />
            <br />
          </div>

          <div class="grid-item5">
            <label for="locRep">LOC Rep:</label>
            <span class="error" id="err-locRep">Please input a LOC Rep!</span>
            <input type="text" name="locRep" id="locRep" />
            <br />
          </div>

          <div class="grid-item6">
            <label for="pen">PEN Contact:</label>
            <span class="error" id="err-pen">Please input a PEN Contact!</span>
            <input type="text" name="pen" id="pen" />
            <br />
          </div>

          <div class="grid-item7">
            <label for="payee">Payee(s)</label>
            <input type="text" name="payee" id="payee" />
          </div>
          <div class="grid-item7">
            <label for="report">Report Submitted</label>
            <input type="text" name="report" id="report" />
          </div>
          <div class="grid-item8">
            <div>
              <input type="checkbox" name="paid" id="paid" />
              <label for="paid">Has Been Paid</label>
            </div>
          </div>

          <div class="notes">
            <label for="notes">Notes</label>
            <textarea name="notes" id="notes"></textarea>
          </div>
          <br />
        </div>

        <div class="button-container">
          <div class="main-buttons">
            <button type="button" id="edit-Details">Edit Details</button>
            <button type="button" id="cancel-button">Cancel</button>
            <button type="submit" id="save-button">Save</button>
          </div>
          <div class="main-buttons-right">
            <a href="/summary" class="back-button">
              <svg
                class="back-icon"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <polyline points="15 18 9 12 15 6"></polyline>
              </svg>
              View Summary</a>
            <a href="/" id="backButton" class="back-button">
              <svg
                class="back-icon"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <polyline points="15 18 9 12 15 6"></polyline>
              </svg>
              Back to home page
            </a>
          </div>
        </div>
      </fieldset>
    </form>
